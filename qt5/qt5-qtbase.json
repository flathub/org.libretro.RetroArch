{
  "name": "qt5-qtbase",
  "cleanup": [
    "/bin",
    "/doc",
    "/include",
    "/lib/*.a",
    "/lib/*.la",
    "/lib/*.prl",
    "/lib/cmake",
    "/lib/debug",
    "/lib/mkspecs",
    "/lib/pkgconfig"
  ],
  "config-opts": [
    "-confirm-license",
    "-opensource",
    "-debug",
    "-shared",
    "-platform", "linux-g++",
    "-optimized-qmake",
    "-nomake", "examples",
    "-nomake", "tests",
    "-no-harfbuzz",
    "-no-sqlite",
    "-no-freetype",
    "-qt-libpng",
    "-qt-zlib",
    "-qt-libjpeg",
    "-accessibility",
    "-dbus-linked",
    "-glib",
    "-icu",
    "-openssl-linked",
    "-no-pch",
    "-no-rpath",
    "-no-separate-debug-info",
    "-no-directfb",
    "-no-linuxfb",
    "-no-kms",
    "-no-cups",
    "-system-proxies",
    "-archdatadir", "/app/lib/"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "https://download.qt.io/official_releases/qt/5.11/5.11.1/submodules/qtbase-everywhere-src-5.11.1.tar.xz",
      "sha256": "a0d047b2da5782c8332c59ae203984b64e4d5dc5f4ba9c0884fdbe753d0afb46"
    },
    {
      "type": "shell",
      "commands": [
        "mv configure configure.qt"
      ]
    },
    {
      "type": "script",
      "commands": [
        "processed=`sed -e 's/--/-/g ; s/=/ /g' <<< $@`",
        "./configure.qt $processed"
      ],
      "dest-filename": "configure"
    }
  ]
}